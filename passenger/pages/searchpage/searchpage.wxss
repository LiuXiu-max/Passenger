/* pages/searchpage/searchpage.wxss */
.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
  background-color: white;
}
.search_head{
  margin-top: 40rpx;
  width: 80%;
  height: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 0px 5px 0px #36cfc9;
  border-radius: 48rpx;
}
.search_head input{
  flex:1;
  background-color: white;
  height: 100%;
  color: #36cfc9;
  font-weight: normal;
  padding-left: 20rpx;
}
.buttonleft{
  border-top-left-radius: 48rpx;
  border-bottom-left-radius: 48rpx;
  border-bottom-right-radius: 0rpx;
  border-top-right-radius:0rpx;
  background-image:url(https://www.liuxiu.xyz/demoimage?search.png);
}
.buttonright{
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  border-bottom-right-radius: 48rpx;
  border-top-right-radius:48rpx;
  background-image:url(https://www.liuxiu.xyz/demoimage?clear.png);
}
button{
  width: 100rpx;
  border: 0;
  background-color: white;
  margin-right: 0;
  height: 100%;
  background-size: 70% 70%;
  background-repeat: no-repeat;
  background-position:center;
}
button::after{
  border:none;
}
.search_history{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.history_head{
  width: 80%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.delall_history{
  color: #777;
}
.history_list{
  border-bottom:1rpx solid #36cfc9;
  height: 130rpx;
  width: 80%;
}
.history_item{
  line-height: 130rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.item_text{
  flex: 1;
  font-size: 32rpx;
}
.cancel_icon{
  padding-top: 50rpx;
}
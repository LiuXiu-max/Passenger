/* pages/mytrips/mytrips.wxss */
.container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
  background-color: white;
}
.head{
  margin-top: 40rpx;
  width: 80%;
  height: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0px 0px 5px 0px #36cfc9;
  border-radius: 48rpx;
}
button{
  border-radius: 48rpx;
  line-height: 96rpx;
  width: 100%;
  border: 0;
  background-color: white;
  margin-right: 0;
  height: 100%;
  background-size: 70% 70%;
  background-repeat: no-repeat;
  background-position:center;
}
button::after{
  border:none;
}
.filer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.filer_head{
  color: #999;
  width: 90%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.filer_head view{
  line-height: 150rpx;
  height: 100%;
  text-align: center;
  flex: 1;
}
.selected{
    font-weight: bold;
  color: black;
  font-size: 35rpx;
}
.searchbox{
  height: auto;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.searchcard{
  border-radius: 48rpx;
  box-shadow: 0px 10px 10px 0px #cecdcd70;
  height: 400rpx;
  width: 90%;
  margin-bottom: 40rpx;
}
.cardimg{
  border-top-left-radius: 48rpx;
  border-top-right-radius: 48rpx;
  height: 70%;
  width: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}
.cardname{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.detailfoot{
  padding-top: 20rpx;
  height: 20%;
  justify-content: space-between;
  width: 100%;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
}
.dateIcon{
    width: 35rpx;
  height: 40rpx;
}
.popIcon{
    width: 35rpx;
  height: 40rpx;
}
.eyeIcon{
    width: 35rpx;
  height: 40rpx;
}

.item_navigator{
  height: 100%;
  width: 100%;
}
.ashbinIcon{
  width: 70rpx;
  height: 70rpx;
  margin-right: 10rpx;
}
.cardname{
  font-weight: bold;
  font-size: 30rpx;
}
.itemblock
{
  display: flex;
  flex-direction: row;
}
.new_imageback{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f7f7f7;
  width: 50rpx;
  height: 50rpx;
  border-top-left-radius: 30%;
  border-bottom-right-radius: 30%;
}
.heart_full{
  width: 45rpx;
  height: 45rpx;
}
.heart{
  width: 45rpx;
  height: 45rpx;
}